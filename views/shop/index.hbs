<div class="row">
    <div class="col-sm-6 col-md-4 md-offset-4 sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
<div class="row">
    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="img-thumbnail">
            <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
            <div class="figure-caption">
                <h3>{{ this.title }}</h3>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price float-left">${{ this.price }}</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success active float-right" role="button">Add to Shopping Cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}